<script>
/* ✅ YOUR TEACHABLE MACHINE MODEL */
const MODEL_URL = "https://teachablemachine.withgoogle.com/models/NOqeGT4Jp/";

let model = null;

// Load model
async function loadModel() {
    try {
        model = await tmImage.load(
            MODEL_URL + "model.json",
            MODEL_URL + "metadata.json"
        );
        console.log("Model loaded");
    } catch (err) {
        alert("Failed to load model");
        console.error(err);
    }
}
loadModel();

// Predict image
async function predictImage(event) {
    if (!model) {
        alert("Model not ready yet");
        return;
    }

    const img = document.getElementById("preview");
    const previewBox = document.getElementById("previewBox");
    const resultBox = document.getElementById("resultBox");

    img.src = URL.createObjectURL(event.target.files[0]);
    previewBox.style.display = "block";

    img.onload = async () => {
        const predictions = await model.predict(img);
        predictions.sort((a, b) => b.probability - a.probability);

        document.getElementById("resultLabel").innerText =
            "Result: " + predictions[0].className;

        document.getElementById("resultProb").innerText =
            "Confidence: " + (predictions[0].probability * 100).toFixed(2) + "%";

        resultBox.style.display = "block";
    };
}
</script>

